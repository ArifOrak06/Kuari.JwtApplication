@model UserLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login Page </title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
</head>
<body>

    <div class="container">
        <form class="form w-75 m-5 p-3 shadow mx-auto" asp-action="Login" asp-controller="Account" method="post">
            <div class="mb-3">
                <h3>Giriş Yap</h3>
                <label class="form-label">Kullanıcı Adı:</label>
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                <input type="text" class="form-control" asp-for="@Model.Username" />
            </div>
            <div class="mb-3">
                <label class="form-label">Parola:</label>
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                <input type="password" class="form-control" asp-for="@Model.Password" />
            </div>
            <div class="mb-3">

                <button type="submit" class="btn btn-primary btn-sm">Giriş Yap</button>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly">

            </div>
        </form>
    </div>


    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>